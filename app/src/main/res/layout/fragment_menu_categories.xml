<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_bg_menu"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imBackItem"
        android:layout_width="@dimen/margin_60"
        android:layout_height="@dimen/margin_60"
        android:src="@drawable/ic_back"
        android:layout_margin="@dimen/margin_10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/pick_categories"
        android:textColor="@color/black_50"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/margin_10"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imBackItem"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@drawable/bg_list_item"
        android:padding="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/animal"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:src="@drawable/animal_categories"
                android:layout_margin="@dimen/margin_10"/>
            <ImageView
                android:id="@+id/tom"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:src="@drawable/animal_categories"
                android:layout_margin="@dimen/margin_10"/>
            <ImageView
                android:id="@+id/disney"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:src="@drawable/animal_categories"
                android:layout_margin="@dimen/margin_10"/>
            <ImageView
                android:id="@+id/cart"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:src="@drawable/animal_categories"
                android:layout_margin="@dimen/margin_10"/>
            <ImageView
                android:id="@+id/princess"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:src="@drawable/animal_categories"
                android:layout_margin="@dimen/margin_10"/>
            <ImageView
                android:id="@+id/helicopter"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:src="@drawable/animal_categories"
                android:layout_margin="@dimen/margin_10"/>
            <ImageView
                android:id="@+id/fish"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:src="@drawable/animal_categories"
                android:layout_margin="@dimen/margin_10"/>

        </LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admob_banner_main"
        android:layout_marginBottom="@dimen/margin_10"/>

</RelativeLayout>