<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_menu"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imBackItem"
        android:layout_width="@dimen/margin_50"
        android:layout_height="@dimen/margin_50"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/pick_categories"
        android:textColor="@color/black_50"
        android:textSize="40sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_list_item"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/animal"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_10"
                android:src="@drawable/animal_categories" />

            <ImageView
                android:id="@+id/tom"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_10"
                android:src="@drawable/tom" />

            <ImageView
                android:id="@+id/disney"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_10"
                android:src="@drawable/disney" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_10"
                android:src="@drawable/car_draw" />

            <ImageView
                android:id="@+id/princess"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_10"
                android:src="@drawable/princess" />

            <ImageView
                android:id="@+id/helicopter"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_10"
                android:src="@drawable/planes" />

            <ImageView
                android:id="@+id/fish"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_10"
                android:src="@drawable/fish" />

        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_10"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admob_banner_main" />

</RelativeLayout>