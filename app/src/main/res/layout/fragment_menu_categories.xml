<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_category"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imBackItem"
        android:layout_width="@dimen/margin_50"
        android:layout_height="@dimen/margin_50"
        android:src="@drawable/ic_back" />


    <RelativeLayout
        android:layout_width="@dimen/_450sdp"
        android:layout_height="@dimen/_250sdp"
        android:background="@drawable/ic_bg_item"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/animal"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:src="@drawable/ic_ca_animal" />

        <ImageView
            android:id="@+id/food"
            android:layout_toRightOf="@+id/animal"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginHorizontal="@dimen/margin_10"
            android:src="@drawable/ic_ca_fruit" />

        <ImageView
            android:id="@+id/santa"
            android:layout_toRightOf="@+id/food"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginHorizontal="@dimen/margin_10"
            android:src="@drawable/ic_ca_me" />

        <ImageView
            android:id="@+id/cart"
            android:layout_below="@+id/animal"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginHorizontal="@dimen/margin_10"
            android:src="@drawable/ic_ca_car" />

        <ImageView
            android:id="@+id/princess"
            android:layout_below="@+id/animal"
            android:layout_toRightOf="@+id/cart"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginHorizontal="@dimen/margin_10"
            android:src="@drawable/ic_ca_prin" />

        <ImageView
            android:id="@+id/fish"
            android:layout_below="@+id/animal"
            android:layout_toRightOf="@+id/princess"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginHorizontal="@dimen/margin_10"
            android:src="@drawable/ic_ca_fish" />


    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="-20dp"
        android:layout_centerHorizontal="true"/>

    <HorizontalScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_list_item"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:id="@+id/helicopter"
                android:layout_width="@dimen/margin_200"
                android:layout_height="@dimen/margin_200"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_10"
                android:src="@drawable/planes" />

        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admob_banner_main" />

</RelativeLayout>