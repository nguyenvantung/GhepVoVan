<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_app"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="@dimen/_10sdp"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/buttonGhep"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            android:src="@drawable/ic_jigsaw" />

        <ImageView
            android:id="@+id/buttonPuzzle"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_toRightOf="@+id/buttonGhep"
            android:src="@drawable/ic_puzzle" />

        <ImageView
            android:layout_below="@+id/buttonGhep"
            android:id="@+id/buttonDraw"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            android:src="@drawable/ic_coloring" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
       android:layout_toRightOf="@+id/ivLogo"
        android:layout_marginVertical="@dimen/margin_10"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:src="@drawable/ic_more" />

    <ImageView
        android:id="@+id/ivRate"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_rate_app" />

    <ImageView
        android:layout_toLeftOf="@+id/ivRate"
        android:id="@+id/ivShare"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_share" />
    <ImageView
        android:layout_below="@+id/ivRate"
        android:layout_alignParentRight="true"
        android:id="@+id/ivSound"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_sound_on" />
</RelativeLayout>