<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_menu"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivSound"
        android:layout_width="@dimen/margin_60"
        android:layout_height="@dimen/margin_60"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_sound_on" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="@dimen/margin_60"
        android:layout_height="@dimen/margin_60"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_share" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/margin_300"
        android:layout_height="@dimen/margin_60"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_logo" />

    <ImageView
        android:id="@+id/ivRate"
        android:layout_width="@dimen/margin_60"
        android:layout_height="@dimen/margin_60"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_rate_app" />

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="@dimen/margin_60"
        android:layout_height="@dimen/margin_60"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_10"
        android:src="@drawable/ic_more" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/buttonGhep"
            android:layout_width="@dimen/margin_200"
            android:layout_height="@dimen/margin_200"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_20"
            android:src="@drawable/ic_button_ghep" />

        <ImageView
            android:id="@+id/buttonPuzzle"
            android:layout_width="@dimen/margin_200"
            android:layout_height="@dimen/margin_200"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_20"
            android:layout_toRightOf="@+id/buttonGhep"
            android:src="@drawable/ic_button_puzzle" />
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/ivMore"
        android:layout_toRightOf="@+id/ivRate"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admob_banner_main" />

</RelativeLayout>