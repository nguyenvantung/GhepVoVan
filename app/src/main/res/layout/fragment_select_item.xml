<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_menu">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rclListItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_200"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_list_item"
        android:layout_marginTop="@dimen/margin_5"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSetting3"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_10"
            android:background="@drawable/bg_setting_pie_select"
            android:gravity="center"
            android:text="3x3"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSetting4"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_10"
            android:layout_toRightOf="@+id/tvSetting3"
            android:background="@drawable/bg_setting_pie"
            android:gravity="center"
            android:text="4x4"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSetting5"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_10"
            android:layout_toRightOf="@+id/tvSetting4"
            android:background="@drawable/bg_setting_pie"
            android:gravity="center"
            android:text="5x5"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSetting6"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_10"
            android:layout_toRightOf="@+id/tvSetting5"
            android:background="@drawable/bg_setting_pie"
            android:gravity="center"
            android:text="6x6"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSetting7"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_10"
            android:layout_toRightOf="@+id/tvSetting6"
            android:background="@drawable/bg_setting_pie"
            android:gravity="center"
            android:text="7x7"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSetting8"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_10"
            android:layout_toRightOf="@+id/tvSetting7"
            android:background="@drawable/bg_setting_pie"
            android:gravity="center"
            android:text="8x8"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imBackMenu"
        android:layout_width="@dimen/margin_50"
        android:layout_height="@dimen/margin_50"
        android:src="@drawable/ic_back"
        android:layout_margin="@dimen/margin_10"/>

    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80"
        android:layout_marginTop="@dimen/margin_10"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admob_banner_main"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>